erDiagram

    CUSTOMER {
        INT customer_id PK
        VARCHAR first_name
        VARCHAR last_name
        VARCHAR address
        VARCHAR pincode
        VARCHAR phone_number
        DATE customer_joining_date
    }

    STORE {
        INT id PK
        VARCHAR address
        VARCHAR store_pincode
        VARCHAR store_manager_name
        DATE store_opening_date
    }

    PRODUCT {
        INT id PK
        VARCHAR name
        DECIMAL current_price
        DECIMAL old_price
        TIMESTAMP created_date
        TIMESTAMP updated_date
        DATE expiry_date
    }

    SALES_TEAM {
        INT id PK
        VARCHAR first_name
        VARCHAR last_name
        INT manager_id
        CHAR is_manager
        VARCHAR address
        VARCHAR pincode
        DATE joining_date
    }

    SALES {
        INT customer_id FK
        INT store_id FK
        INT sales_person_id FK
        INT product_id FK
        DECIMAL price
        INT quantity
        DECIMAL total_cost
        DATE sales_date
    }

    CUSTOMER ||--o{ SALES : customer_id
    STORE ||--o{ SALES : store_id
    SALES_TEAM ||--o{ SALES : sales_person_id
    PRODUCT ||--o{ SALES : product_id
